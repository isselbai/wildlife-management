{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "apt-get update && apt-get install -y python3-dev build-essential libpq-dev && python -m pip install --upgrade pip setuptools wheel && pip install -r requirements.txt && python manage.py collectstatic --noinput"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "gunicorn wildlife_management.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --threads 2 --timeout 60 --access-logfile - --error-logfile - --log-level info",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/health/",
        "healthcheckTimeout": 300
    },
    "variables": {
        "PYTHON_VERSION": "3.11.7",
        "PYTHONUNBUFFERED": "1",
        "DJANGO_SETTINGS_MODULE": "wildlife_management.settings",
        "PORT": "8000"
    }
} 