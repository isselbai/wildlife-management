{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt && python manage.py collectstatic --noinput"
    },
    "deploy": {
        "startCommand": "gunicorn wildlife_management.wsgi:application --log-file -",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "variables": {
        "PYTHON_VERSION": "3.11.7",
        "WEB_CONCURRENCY": "4",
        "DJANGO_SETTINGS_MODULE": "wildlife_management.settings",
        "PYTHONUNBUFFERED": "1",
        "NIXPACKS_PYTHON_VERSION": "3.11.7"
    }
} 